<% include ./partials/header.ejs%>
<div class='ui main text container segment'>
    <div class="ui huge header"> <%= post.title%></div>
        <div cass="ui top attached"> 
            <div class="item">
                <img class="ui centered rounded image" src="<%= post.image %>" alt="">
                <div class="content">
                    <span><%= post.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- post.body %></p>
                </div>
                <form action="/blogs/<%= post._id%>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
</div>
<% include ./partials/footer.ejs%>