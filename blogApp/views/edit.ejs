<% include ./partials/header.ejs%>
<div class='ui main text container segment'>
    <div class='ui huge header'>Edit <%= post.title%></div>
    <form class="ui form" action='/blogs/<%= post._id%>?_method=PUT' method='POST'>
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" placeholder='Title' value="<%= post.title%>">
        </div>
        <div class="field">
         <label for="">Image</label>
            <input type="text" name="blog[image]" placeholder='Image' value="<%= post.image%>">
        </div>
        <div class="field">
            <label for="">Body</label>
            <textarea name="blog[body]" required> <%= post.body%></textarea>
        </div>
        <input class="ui black basic button" type="submit">
    </form>
</div>
<% include ./partials/footer.ejs%>