{{> header}}

<div class="ui main text container">
    <div class="ui top attached segment">
        <div class="ui divided items">
            <div class="ui divided items">
                <div class="item">
                    <div class="content">
                        <h3>{{recipe.title}}</h3>
                        <h4>Ingredients</h4>
                        <ul>
                            {{#each recipe.ingredients}}
                            <li>{{this.quantity}} {{this.ingredient}}</li>
                            {{/each}}
                        </ul>
                        <h4>Method</h4>
                        <p>{{recipe.body}}</p>
                        <div id="btnContainer" class="extra">
                            <a href="/recipes/{{recipe._id}}/edit" class="ui basic black button">Edit</a>
                            <form action='/recipes/{{recipe._id}}?_method=DELETE' method="POST">
                                <button class="ui red basic button">Delete</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

{{> footer}}