{{> header}}

<div class="ui main text container">
    <div class="ui top attached segment">
        <div class="ui divided items">
            <div class="ui divided items">
                {{#each recipe}}
                <div class="item">
                    <div class="content">
                        <h3>{{this.title}}</h3>
                        <h4>Ingredients</h4>
                        <ul>
                            {{#each this.ingredients}}
                            <li>{{this.quantity}} {{this.ingredient}}</li>
                            {{/each}}
                        </ul>
                        <h4>Method</h4>
                        <p>{{this.body}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

{{> footer}}