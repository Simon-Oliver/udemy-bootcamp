{{> header}}

<div class="ui main text container">
    <div class="ui top attached segment">
        <div class="ui divided items">
            <div class="ui divided items">
                {{#each recipe}}
                <div class="item">
                    <div class="content">
                        <h3>{{this.title}}</h3>
                        <div class="extra">
                            <a href="/recipes/{{this._id}}" class="ui basic black button">Read More</a>
                        </div>
                    </div>
                </div>

                {{/each}}

            </div>
        </div>
    </div>

    <a href="/recipes/new">
        <div class="ui bottom attached basic black button" tabindex="0">Add Recipe</div>
    </a>

</div>

{{> footer}}